<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.healthdashboard.Graphs">

    <TextView
        android:id="@+id/graphTemp"
        android:layout_width="192dp"
        android:layout_height="200dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/bg2"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="22sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/graphHeart" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="585dp"
        android:layout_height="200dp"
        android:id="@+id/graph"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/graphHeart"
        app:layout_constraintHorizontal_bias="0.501" />
    <com.jjoe64.graphview.GraphView
        android:layout_width="585dp"
        android:layout_height="200dp"
        android:id="@+id/graph2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/graph"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.529"
        app:layout_constraintRight_toLeftOf="@+id/graphTemp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/graphHeart"
        android:layout_width="192dp"
        android:layout_height="200dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg1"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="22sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
